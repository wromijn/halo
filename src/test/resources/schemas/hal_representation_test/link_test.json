{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "type": "object",
          "properties": {
            "href": {
              "type": "string",
              "const": "http://www.example.com/self"
            },
            "title": {
              "type": "string",
              "const": "URI of this resource"
            }
          },
          "required": [
            "href",
            "title"
          ],
          "additionalProperties": false
        },
        "simple_link": {
          "type": "object",
          "properties": {
            "href": {
              "type": "string",
              "const": "http://www.example.com/single"
            }
          },
          "required": [
            "href"
          ],
          "additionalProperties": false
        },
        "link_object": {
          "type": "object",
          "properties": {
            "href": {
              "type": "string",
              "const": "http://www.example.com/object"
            }
          },
          "required": [
            "href"
          ],
          "additionalProperties": false
        },
        "link_list": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "href": {
                  "type": "string",
                  "const": "http://www.example.com/list"
                }
              },
              "required": [
                "href"
              ],
              "additionalProperties": false
            }
          ]
        },
        "link_stream": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "href": {
                  "type": "string",
                  "const": "http://www.example.com/stream"
                }
              },
              "required": [
                "href"
              ],
              "additionalProperties": false
            }
          ]
        }
      },
      "required": [
        "self",
        "simple_link",
        "link_object",
        "link_list",
        "link_stream"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "_links"
  ],
  "additionalProperties": false
}